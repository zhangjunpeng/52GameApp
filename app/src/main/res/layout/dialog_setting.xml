<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginRight="14dp"
    android:layout_marginLeft="14dp"
    android:background="@drawable/border_dialog"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F1F5F7"
        >

        <TextView
            android:id="@+id/message_dialog_setting"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:text="将会清除所有缓存，包括离线内容 及图片，确定清除吗？"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:maxWidth="225dp"
            android:textSize="15dp"
            android:textColor="#353535"
        />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DFDFDF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/channel_dialog_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="16dp"
            android:textColor="#353535"
            />
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#DFDFDF"
            />
        <TextView
            android:id="@+id/positive_dialog_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="清除"
            android:textSize="16dp"
            android:textColor="#353535"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>