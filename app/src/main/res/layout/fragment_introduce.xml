<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_intro"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:src="@drawable/intro1"
        android:layout_marginTop="71dp"
        />
    <TextView
        android:id="@+id/text_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="顶级投资、优质IP、一线\n发行、海量外包等你发掘"
        android:textSize="19dp"
        android:textColor="#FF4A4B4C"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/image_intro"
        />
    <TextView
        android:id="@+id/go_intro"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderedit"
        android:layout_alignParentBottom="true"
        android:text="立即体验"
        android:layout_marginBottom="110dp"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="#4A4B4C"
        />
</RelativeLayout>