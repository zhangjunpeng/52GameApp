<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="#1000"
    >

    <ImageView
        android:id="@+id/back_titlebar_de"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="17.33dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"
        />

    <ImageView
        android:id="@+id/share_titlebar_de"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/share"
        android:layout_marginRight="17.33dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:id="@+id/care_title_de"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/share_titlebar_de"
        android:src="@drawable/care"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />
</RelativeLayout>
