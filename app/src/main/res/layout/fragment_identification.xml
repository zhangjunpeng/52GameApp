<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="166.33dp"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/stageimage_idtf"
                android:layout_width="66.66dp"
                android:layout_height="66.66dp"
                android:src="@drawable/rz_fail"
                />
            <TextView
                android:id="@+id/stage_idtf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="未认证"
                android:textColor="#7C7C7C"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/reson_idtf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="失败原因：企业名称与营业执照不一致！"
                android:textSize="12dp"
                android:textColor="@color/orange"
                android:layout_marginTop="13dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="66.66dp"
            android:layout_height="66.66dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BEBEBE"
        android:layout_marginLeft="13.33dp"
        android:layout_marginRight="13.33dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证后，可以享受以下服务 : "
            android:layout_marginLeft="27dp"
            android:textSize="13.33dp"
            android:textColor="#4c4c4c"
            android:layout_marginTop="27dp"
            />
        <TextView
            android:id="@+id/servers_idtf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="27dp"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            />

        <TextView
            android:id="@+id/check_idtf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_button_orange"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="75dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16.66dp"
            />
    </RelativeLayout>
</LinearLayout>