<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F7"
    >

    <include
        android:id="@+id/titlebar_reg"
        layout="@layout/titlebar_save"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/border_edit_comment"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/phoneicon"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:inputType="number"
                android:maxLines="1"
                android:background="@null"
                android:hint="请输入手机号码"
                android:textColorHint="@color/edithint"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/getcode_reg"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="验证码"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="12dp"
                android:background="@drawable/border_getcode_orange"
                />
            
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/codeicon"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/editText_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:hint="请输入短信验证码"
                android:maxLines="1"
                android:textColorHint="@color/edithint"
                android:textSize="12dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pwdicon"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:id="@+id/editText_pwd"
                android:background="@null"
                android:hint="请输入密码，至少6位"
                android:maxLines="1"
                android:textColorHint="@color/edithint"
                android:textSize="12dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/warning_reg">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/warning"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码错误"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:textColor="#E70C0C"
            android:id="@+id/waringtext_reg" />

    </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/button_reg_reg"
            android:textSize="17dp"
            android:textColor="#fff"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/border_button_gray" />
    <TextView
        android:id="@+id/user_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="12dp"
        android:textColor="#999999"
        android:text="注册代表同意《4S平台用户服务协议》"
        />

</LinearLayout>