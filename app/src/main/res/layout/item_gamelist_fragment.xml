<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="117dp"
    android:background="#f1f5f8"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/border_edit_comment"
        android:layout_marginTop="7dp"

        >

        <RelativeLayout
            android:id="@+id/layout_imageview_list"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border_line"
            >
            <ImageView
                android:id="@+id/imageView_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"

                android:padding="1px"
                />
            <com.app.view.TopLeftCornerImage
                android:id="@+id/gamerating"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitXY"
                />
        </RelativeLayout>


        <TextView
            android:id="@+id/name_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxWidth="182dp"
            android:textSize="14.67dp"
            android:textColor="#4C4C4C"
            android:layout_toRightOf="@+id/layout_imageview_list"
            android:layout_marginLeft="9.33dp"
            android:text="蛮荒记"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/layout_imageview_list"
            />
        <TextView
            android:id="@+id/norms_item_gamelist"
            android:layout_width="34dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/layout_imageview_list"
            android:layout_below="@+id/name_item_list"
            android:layout_marginLeft="9.33dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_blue"
            android:text="正版IP"
            android:textSize="8dp"
            android:textColor="#fff"
            android:gravity="center"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/introuduction_item_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:maxLines="3"
            android:textColor="#848484"
            android:lineSpacingExtra="1dp"
            android:gravity="center_vertical"

            android:layout_toRightOf="@+id/layout_imageview_list"
            android:layout_alignBottom="@+id/layout_imageview_list"
            android:layout_marginLeft="9.33dp"
            android:text="离开这就成\n离开这就成"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="43.33dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/solid_rightconner"
            android:layout_margin="1px"
            >
            <ImageView
                android:id="@+id/download_item_list"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/down_title_gray"
                android:layout_marginBottom="33dp"
                />
            <ImageView
                android:id="@+id/care_item_list"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/care_gray"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>