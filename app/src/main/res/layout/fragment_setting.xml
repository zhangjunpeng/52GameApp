<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f7"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#CACACA"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"

        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            >
        <TextView
            android:id="@+id/text1_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="消息设置"
            android:textColor="#4C4C4C"
            />
        <TextView
            android:id="@+id/messageset_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当有新消息时，手机将会发出提示音或震动"
            android:layout_below="@+id/text1_setting"
            android:layout_marginTop="13dp"
            android:textSize="12dp"
            android:textColor="#7C7C7C"
            />
        </LinearLayout>

        <ToggleButton
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:id="@+id/toggle_setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:background="@drawable/tooglebutton"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CACACA"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#CACACA"
        />
    <RelativeLayout
        android:id="@+id/clear_cahe_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4C4C4C"
            android:text="清理缓存"
            android:textSize="16dp"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/cahesize_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="0 MB"
            android:textColor="#7C7C7C"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CACACA"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#CACACA"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#fff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/check_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="24dp"
                android:text="检查更新"
                android:layout_centerVertical="true"
                android:textColor="#4C4C4C"
                />
            <ImageView
                android:layout_width="7.33dp"
                android:layout_height="15dp"
                android:src="@drawable/grayarrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B4B4B4"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            />
        <RelativeLayout
            android:id="@+id/advice_report"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="24dp"
                android:text="意见反馈"
                android:layout_centerVertical="true"
                android:textColor="#4C4C4C"
                />
            <ImageView
                android:layout_width="7.33dp"
                android:layout_height="15dp"
                android:src="@drawable/grayarrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#B4B4B4"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            />
        <RelativeLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="24dp"
                android:text="关于我们"
                android:layout_centerVertical="true"
                android:textColor="#4C4C4C"
                />
            <ImageView
                android:layout_width="7.33dp"
                android:layout_height="15dp"
                android:src="@drawable/grayarrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                />
        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CACACA"
        />


    <RelativeLayout
        android:id="@+id/loginout_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CACACA"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="24dp"
            android:text="退出登录"
            android:layout_centerVertical="true"
            android:textColor="#4C4C4C"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CACACA"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</LinearLayout>