<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"


    android:orientation="vertical"
    >


    <include
        android:id="@+id/title_main"
        layout="@layout/titlebar"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <FrameLayout
        android:id="@+id/frameLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_index"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B4B4B4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54.33dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/index_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            >
        <ImageView
            android:id="@+id/index_image"
            android:layout_width="25.33dp"
            android:layout_height="25.33dp"
            android:src="@drawable/inidex_select"
            android:layout_marginTop="6dp"
            />
            <TextView
                android:id="@+id/text_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.33dp"
                android:text="首页"
                android:textColor="#4C4C4C"
                android:layout_marginTop="4.67dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/game_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
             <ImageView
                 android:id="@+id/game_image"
                 android:layout_width="25.33dp"
                 android:layout_height="25.33dp"
                 android:layout_marginTop="6dp"
             android:src="@drawable/game_select"
            />
            <TextView
                android:id="@+id/text_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.33dp"
                android:text="游戏"
                android:textColor="#4C4C4C"
                android:layout_marginTop="4.67dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/info_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/info_imgae"
                android:layout_width="25.33dp"
                android:layout_height="25.33dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/info_select"
                />
            <TextView
                android:id="@+id/text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.33dp"
                android:text="资讯"
                android:textColor="#4C4C4C"
                android:layout_marginTop="4.67dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/my_image"
                android:layout_width="25.33dp"
                android:layout_height="25.33dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/my_select"
                />
            <TextView
                android:id="@+id/text_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.33dp"
                android:text="我的"
                android:textColor="#4C4C4C"
                android:layout_marginTop="4.67dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
