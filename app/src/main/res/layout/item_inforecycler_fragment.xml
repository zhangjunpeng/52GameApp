<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="293dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="@drawable/border_edit_comment"
    android:layout_marginTop="13.33dp"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#282828"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="盛大盛大的"
            android:layout_marginTop="9dp"
            />

        <ImageView
            android:id="@+id/mess_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/mesicon_info"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="520"
            android:textSize="10dp"
            android:layout_toRightOf="@+id/mess_icon"
            android:layout_alignBottom="@+id/mess_icon"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="7dp"
            />
        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/time_infomation"
            android:layout_below="@+id/name"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/time"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-12 17:20"
            android:textSize="10dp"
            android:layout_alignBottom="@+id/mess_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="7dp"
            />

    </RelativeLayout>

</LinearLayout>