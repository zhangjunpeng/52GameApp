<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/showname_item_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#FF9D00"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:text="重型炮手"
        />
    <TextView
        android:id="@+id/time_item_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:text="asdasdasdsa"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/showname_item_advice"
        android:layout_marginRight="17dp"

        />
    <TextView
        android:id="@+id/advice_item_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showname_item_advice"
        android:textSize="10dp"
        android:maxLines="5"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="14dp"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#838483"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        />

</LinearLayout>