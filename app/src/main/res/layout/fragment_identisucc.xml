<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f7"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_edit_comment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86.66dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="21dp"
                    android:src="@drawable/rz_success"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="身份认证成功"
                    android:textColor="@color/orange"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/rz_gxtg"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="#bebebe"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="105.33dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="17dp"
                >
                <TextView
                    android:id="@+id/servertitle_idensucc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4c4c4c"
                    android:text="已认证，可以享受以下服务 ："
                    android:textSize="13.33dp"
                    android:layout_marginLeft="21dp"
                    />
                <ImageView
                    android:id="@+id/more_idtensucc"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/down_arrow"
                    android:layout_marginLeft="110dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/servers_idensucc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#999999"
                android:text="1) 游戏产品免费评测服务 \n2) 发行方展示及推荐服务 \n3) 甄选优质游戏产品推荐代理服务 \n4) 专业游戏评测报告建议"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="15dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="#bebebe"
            />
        <RelativeLayout
            android:id="@+id/checkinfo_idensu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="查看认证资料"
                android:textSize="16.66dp"
                android:textColor="#4c4c4c"
                />

        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_edit_comment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86.66dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/stageImge_idensucc"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="21dp"
                        android:src="@drawable/rz_fail"
                        />
                    <TextView
                        android:id="@+id/stage_idensucc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="您还未进行实名认证！"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/gxtg_idtensucc"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/truename_tg"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="#bebebe"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="105.33dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    >
                    <TextView
                        android:id="@+id/servertitle_realname_idensucc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4c4c4c"
                        android:text="认证后，可以享受以下服务 ："
                        android:textSize="13.33dp"
                        android:layout_marginLeft="21dp"
                        />
                    <ImageView
                        android:id="@+id/more_server_realname"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/down_arrow"
                        android:layout_marginLeft="110dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/servers_realname_idensucc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="#999999"
                    android:text="1) 游戏产品免费评测服务 \n2) 发行方展示及推荐服务 \n3) 甄选优质游戏产品推荐代理服务 \n4) 专业游戏评测报告建议"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="12dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginBottom="15dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="#bebebe"
                />
            <RelativeLayout
                android:id="@+id/certification_idensucc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:id="@+id/certification_idensucc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="实名认证"
                    android:textSize="16.66dp"
                    android:textColor="@color/orange"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>