<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tj_horizontalListview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#838483"
            android:textSize="14.33dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            android:text="推荐投资人"
            />
        <TextView
            android:id="@+id/more_horizontalListview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#838483"
            android:textSize="12dp"
            android:layout_alignBaseline="@+id/tj_horizontalListview"
            android:layout_marginRight="14dp"
            android:text="更多"
            android:layout_alignParentRight="true"
            />
        <HorizontalScrollView
            android:id="@+id/list_horizontalListview"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_below="@+id/tj_horizontalListview"
            android:layout_marginTop="6.67dp"
            >
        </HorizontalScrollView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/line_index"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B4B4B4"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>